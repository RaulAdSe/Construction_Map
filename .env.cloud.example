# Cloud Database Configuration
CLOUD_DB_ENABLED=true
POSTGRES_SERVER=your_postgres_server_ip
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# Optional: Use explicit connection string (alternative approach)
# CLOUD_DB_CONNECTION_STRING=postgresql://username:password@host:port/database

# Project settings
PROJECT_ID=your_gcp_project_id
REGION=your_gcp_region
VPC_CONNECTOR=your_vpc_connector_name
SERVICE_ACCOUNT=your-service-account@your-project-id.iam.gserviceaccount.com

# Security
SECRET_KEY=generate_a_secure_random_key_here

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=465
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@example.com
EMAIL_SSL=True
