# Example GCP Environment Configuration
# Copy this file to .env.gcp and fill in your actual values

# Core Application Settings
DEBUG=false
SECRET_KEY=your_jwt_secret_key_here
API_PREFIX=/api/v1
CORS_ORIGINS=https://yourfrontend.domain.com

# Cloud Database Configuration
CLOUD_DB_ENABLED=true
CLOUD_DB_INSTANCE=your-project-id:region:instance-name
CLOUD_DB_NAME=construction_map
CLOUD_DB_USER=map-sa
CLOUD_DB_PASSWORD=your_db_password

# Database Pool Settings
CLOUD_DB_POOL_SIZE=10
CLOUD_DB_MAX_OVERFLOW=20
CLOUD_DB_POOL_TIMEOUT=30
CLOUD_DB_POOL_RECYCLE=1800

# IAM Authentication (Optional)
CLOUD_DB_IAM_AUTHENTICATION=false
CLOUD_DB_IAM_USER=your-service-account@your-project-id.iam

# Storage Configuration
UPLOAD_FOLDER=/tmp/uploads
STORAGE_BUCKET=your-storage-bucket-name

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_PATH=/logs

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Service Configuration
PORT=8080 