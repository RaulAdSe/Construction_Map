# Example Local Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Core Application Settings
DEBUG=true
SECRET_KEY=your_local_development_secret_key
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000

# Local Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_local_postgres_password
POSTGRES_DB=construction_map
DATABASE_URL=postgresql://postgres:your_local_postgres_password@localhost:5432/construction_map

# Cloud Database Settings (Disabled for Local)
CLOUD_DB_ENABLED=false

# Storage Configuration
UPLOAD_FOLDER=./uploads
STORAGE_BUCKET=

# Monitoring and Logging
LOG_LEVEL=DEBUG
LOG_PATH=./logs

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=60  # Longer for development
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=48  # Longer for development

# Service Configuration
PORT=8000 