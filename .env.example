# Example Environment Configuration File
# Copy this file to .env and fill in your actual values

# Core Application Settings
DEBUG=false
SECRET_KEY=your_jwt_secret_key_here
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,https://yourfrontend.domain.com

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=construction_map
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/construction_map

# Cloud Database Settings
CLOUD_DB_ENABLED=false
CLOUD_DB_INSTANCE=your-project-id:region:instance-name
CLOUD_DB_NAME=construction_map
CLOUD_DB_USER=database_user
CLOUD_DB_PASSWORD=database_password
CLOUD_DB_IAM_AUTHENTICATION=false
CLOUD_DB_IAM_USER=your-service-account@your-project-id.iam

# Storage Configuration
UPLOAD_FOLDER=./uploads
STORAGE_BUCKET=your-storage-bucket-name

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_PATH=./logs

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24 