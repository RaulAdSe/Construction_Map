# Example environment file for PRODUCTION
# Copy this file to .env for production deployment

# Database Configuration
DB_HOST=172.26.144.3  # Use private IP in production
DB_PORT=5432
DB_NAME=servitec_map
DB_USER=postgres
DB_PASSWORD=your_secure_production_password

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Servitec Map API
DEBUG=False
ENVIRONMENT=production
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
SECRET_KEY=your_very_secure_random_secret_key_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Google Cloud Storage (for production)
CLOUD_STORAGE_ENABLED=true
GCP_PROJECT_ID=deep-responder-444017-h2
GCP_STORAGE_BUCKET=servitec-map-uploads

# Cloud SQL Settings (for production with GCP)
GCP_CLOUD_SQL_INSTANCE=deep-responder-444017-h2:us-central1:map-view-servitec
GCP_CLOUD_SQL_IAM_ACCOUNT=map-service-account@deep-responder-444017-h2.iam.gserviceaccount.com

# Monitoring Settings
LOG_LEVEL=INFO
LOG_PATH=/app/logs
SLOW_QUERY_THRESHOLD=0.5
MAX_SLOW_QUERIES=100
ACTIVITY_RETENTION_DAYS=90
ENABLE_METRICS=True 