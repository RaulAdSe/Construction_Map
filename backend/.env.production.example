# Example environment file for PRODUCTION
# Copy this file to .env for production deployment

# Database Configuration
DB_HOST=172.26.144.3  # Use private IP in production
DB_PORT=5432
DB_NAME=servitec_map
DB_USER=postgres
DB_PASSWORD="your_secure_production_password"

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Servitec Map API"
DEBUG=False
ENVIRONMENT=production
CORS_ORIGINS=*

# Security
SECRET_KEY=generate_a_secure_random_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Google Cloud Storage (for production)
CLOUD_STORAGE_ENABLED=true
GCP_PROJECT_ID=deep-responder-444017-h2
GCP_STORAGE_BUCKET=servitec-map-uploads

# Cloud SQL Settings (for production with GCP)
GCP_CLOUD_SQL_INSTANCE=deep-responder-444017-h2:us-central1:map-view-servitec
GCP_CLOUD_SQL_IAM_ACCOUNT=map-service-account@deep-responder-444017-h2.iam.gserviceaccount.com

# Monitoring Settings
LOG_LEVEL=INFO
LOG_PATH=/app/logs
SLOW_QUERY_THRESHOLD=0.5
MAX_SLOW_QUERIES=100
ACTIVITY_RETENTION_DAYS=90
ENABLE_METRICS=True

# Cloud Run Configuration
PROJECT_ID=deep-responder-444017-h2
REGION=us-central1
SERVICE_NAME=servitec-map-api
MIN_INSTANCES=0
MAX_INSTANCES=5
MEMORY=1Gi
CPU=1
TIMEOUT=300
CONCURRENCY=80
SERVICE_ACCOUNT=map-service-account@deep-responder-444017-h2.iam.gserviceaccount.com
VPC_CONNECTOR=cloudrun-sql-connector
CLOUD_SQL_INSTANCE=deep-responder-444017-h2:us-central1:map-view-servitec

# Database Configuration (Alternative format)
POSTGRES_SERVER=34.123.51.251
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_production_password
POSTGRES_DB=servitec_map

# CORS Settings - Update with your production domain
CORS_ORIGINS=https://your-frontend-domain.com

# Cloud SQL Connection - Using public IP for the database
CLOUD_DB_ENABLED=true
# Example connection string (replace with your actual values)
DATABASE_URL=postgresql://postgres:your_password@34.123.51.251:5432/servitec_map
# Socket connection example
CLOUD_DB_CONNECTION_STRING=postgresql://postgres:your_password@34.123.51.251:5432/servitec_map
CLOUD_DB_POOL_SIZE=5
CLOUD_DB_MAX_OVERFLOW=10
CLOUD_DB_POOL_TIMEOUT=30
CLOUD_DB_POOL_RECYCLE=1800
CLOUD_DB_SSL_MODE=require

# Performance Settings
MAX_WORKERS=4
MIN_CONNECTIONS=5
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=5

# Monitoring Settings
METRICS_ENABLED=true
METRICS_PATH=/metrics
EXCLUDED_PATHS=/metrics,/health

# API Settings
API_VERSION=v1
API_PREFIX=/api 