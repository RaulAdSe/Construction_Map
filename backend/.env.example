# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/servitec_map
# For direct settings when not using URL
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=servitec_map

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Security Settings
SECRET_KEY=development_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# File Storage Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Google Cloud Storage (for production)
CLOUD_STORAGE_ENABLED=false
GCP_PROJECT_ID=your-project-id
GCP_STORAGE_BUCKET=your-bucket-name

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cloud SQL Settings (for production with GCP)
CLOUD_DB_ENABLED=false
CLOUD_DB_CONNECTION_STRING=
CLOUD_DB_SSL_MODE=require
CLOUD_DB_SSL_CA_CERT=

# Monitoring Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_PATH=/app/logs
SLOW_QUERY_THRESHOLD=0.5
MAX_SLOW_QUERIES=100
ACTIVITY_RETENTION_DAYS=90

# Environment
ENVIRONMENT=development
DEBUG=true 