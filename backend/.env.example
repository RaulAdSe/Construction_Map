# Example environment file for local development
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=servitec_map
DB_USER=postgres
DB_PASSWORD=your_database_password

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Servitec Map API
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security
SECRET_KEY=your_secret_key_at_least_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Monitoring
ENABLE_METRICS=True
LOG_LEVEL=INFO

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Google Cloud Storage (for production)
CLOUD_STORAGE_ENABLED=false
GCP_PROJECT_ID=your-project-id
GCP_STORAGE_BUCKET=your-bucket-name

# Cloud SQL Settings (for production with GCP)
CLOUD_DB_ENABLED=false
CLOUD_DB_CONNECTION_STRING=
CLOUD_DB_SSL_MODE=require
CLOUD_DB_SSL_CA_CERT=

# Monitoring Settings
LOG_PATH=/app/logs
SLOW_QUERY_THRESHOLD=0.5
MAX_SLOW_QUERIES=100
ACTIVITY_RETENTION_DAYS=90 