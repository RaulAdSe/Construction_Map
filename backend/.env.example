# PostgreSQL database configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=construction_map

# Cloud database configuration
CLOUD_DB_ENABLED=false
CLOUD_DB_CONNECTION_STRING=postgresql://user:pass@example.com:5432/db
CLOUD_DB_POOL_SIZE=5
CLOUD_DB_MAX_OVERFLOW=10
CLOUD_DB_POOL_TIMEOUT=30
CLOUD_DB_POOL_RECYCLE=1800
CLOUD_DB_SSL_MODE=require
CLOUD_DB_SSL_CA_CERT=

# JWT settings
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# Application settings
DEBUG=true
UPLOAD_FOLDER=./uploads

# Email settings (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=465
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=your-email@example.com
EMAIL_TLS=false
EMAIL_SSL=true

# SendGrid configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_SENDER=your-sendgrid-verified-sender@example.com

# Monitoring settings
SLOW_QUERY_THRESHOLD=0.5
ACTIVITY_RETENTION_DAYS=90
MAX_ACTIVITIES_PER_USER=1000
MAX_SLOW_QUERIES=100
LOG_PATH=./logs 